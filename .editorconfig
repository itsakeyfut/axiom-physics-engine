# EditorConfig is awesome: https://EditorConfig.org
# Axiom Physics Engine - Editor configuration for consistent coding styles

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,hpp,h,cc,cxx,hxx,c}]
indent_style = space
indent_size = 4
max_line_length = 100

# CMake files
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 4

# CMake presets
[CMakePresets.json]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files (Windows)
[*.{bat,cmd}]
indent_style = space
indent_size = 2
end_of_line = crlf

# Python files (for potential build scripts)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Slang/HLSL shader files (also supports GLSL)
[*.{vert,frag,geom,comp,glsl,slang,hlsl}]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,config}]
indent_style = space
indent_size = 2

# Git files
[.git*]
indent_style = space
indent_size = 2

# Makefiles (require tabs)
[Makefile,*.mk]
indent_style = tab
indent_size = 4
